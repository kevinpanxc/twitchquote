$("#channels").html("<%= escape_javascript(render("search_streams")) %>");

$("#channels div").each(function () {
	var id = $(this).data("id");
	var url = $(this).data("url");
	this.onclick = (function (url, id, name) {
		return function () {
			document.getElementById("stream_id").value = id;
			document.getElementById("stream_url").value = url;
			document.getElementById("stream_name").value = name;
		}
	})(url, id, this.innerHTML);
});

function serialize (obj) {
	var str = "";
	for (var key in obj) {
	    if (str != "") {
	        str += "&";
	    }
	    str += key + "=" + obj[key];
	}
	return str;
}