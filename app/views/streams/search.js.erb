$("#channels").html("<%= escape_javascript(render("search_streams")) %>");

$("#channels li").each(function () {
	var id = $(this).data("id");
	var url = $(this).data("url");
	var logo = $(this).data("logo");
	var followers = $(this).data("followers");
	this.onclick = (function (url, id, name, logo, followers) {
		return function () {
			$("#channels_search").fadeOut();
			$("#new_quote_form").show();
			document.getElementById("stream_id").value = id;
			document.getElementById("stream_url").value = url;
			document.getElementById("stream_logo").value = logo;
			document.getElementById("stream_followers").value = followers;
			document.getElementById("stream_name").value = name.trim();
		}
	})(url, id, $(this).find(".name").html(), logo, followers);
});