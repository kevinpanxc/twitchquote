<% provide(:title, 'Quotes from ' + @stream.name) %>

<div class="jumbotron">
	<div class="stream_name_logo"><img src="<%= @stream.logo %>"/><h1><%= @stream.name %></h1></div>
	<p><%= link_to "View on Twitch", @stream.url, class: "btn btn-custom btn-lg" %></p>
</div>

<ul class="quotes">
	<%= render @quotes %>
</ul>

<div class="paginate_parent_bottom"><%= will_paginate(@quotes) %></div>