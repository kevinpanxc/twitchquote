<% provide(:title, 'ASCII Art Copypasta') %>
<% provide(:description, 'Browse a large collection of ASCII art (text art) copypastas from Twitch chat. TwitchQuotes is the leading online database for Twitch chat copypastas') %>

<div class="row quote_row">
    <%= render partial: "quotes/ascii_art_quote", collection: @quotes[0..3], as: :quote %>
</div>

<div class="row quote_row quote_row_ad">
    <%= render partial: "quotes/ascii_art_quote", collection: @quotes[4..6], as: :quote %>
</div>

<%= @quotes[7..-1].each_slice(4).with_index do |quote_batch, i| %>
    <div class="row quote_row">
        <%= render partial: "quotes/ascii_art_quote", collection: quote_batch, as: :quote %>
    </div>
<% end %>

<div class="paginate_parent_bottom"><%= will_paginate %></div>

<%= render partial: 'layouts/ads/swagbucks_square', locals: {initial_hide: true} %>