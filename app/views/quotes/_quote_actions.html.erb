<span class="like_count"><%= quote.likers.count %></span>
<% if current_facebook_user && current_facebook_user.liked_quotes.include?(quote) %>
    <span class="like_form_parent"><%= render "likes/destroy_like", quote: quote %></span>
<% else %>
    <span class="like_form_parent"><%= render "likes/like", quote: quote %></span>
<% end %>
<span class="dislike_count"><%= quote.dislikers.count %></span>
<% if current_facebook_user && current_facebook_user.disliked_quotes.include?(quote) %>
    <span class="dislike_form_parent"><%= render "dislikes/destroy_dislike", quote: quote %></span>
<% else %>
    <span class="dislike_form_parent"><%= render "dislikes/dislike", quote: quote %></span>
<% end %>