<%= form_for(@quote) do |f| %>
    <%= f.text_field :title, placeholder: "Quote title (required)" %>
    <%= f.text_area :quote, rows: 4, placeholder: "Enter quote here... (required)" %>
    <%= f.text_area :context, rows: 1, placeholder: "Enter quote context here..." %>
    <%= f.submit "Edit Quote", class: "btn btn-large btn-custom" %>
<% end %>