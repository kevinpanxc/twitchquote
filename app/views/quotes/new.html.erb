<% provide(:title, 'Add Quote') %>
<h1>Add Quote</h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(@quote) do |f| %>
			<%= render 'shared/quote_error_messages' %>
			<%= f.text_field :quote %>
			<%= f.hidden_field :stream_id, id: "stream_id" %>
			<%= hidden_field_tag "stream_name" %>
			<%= hidden_field_tag "stream_url" %>
			<%= f.submit "Add Quote", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_tag api_search_streams_path, :method => 'get', :id => "channels_search" do %>
		    <%= text_field_tag :search, params[:search] %>
		    <%= submit_tag "Search Stream", :name => nil, class: "btn btn-large btn-primary" %>
		<% end %>
		<div id="channels">
			<%
				if !@channels.nil?
					render 'streams/search_streams'
				end
			%>
		</div>
	</div>
</div>