<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default admin_panel">
            <div class="panel-heading">Announcements</div>
            <table class="table table-hover">
                <thead>
                    <th style="width: 5%">#</th>
                    <th style="width: 60%">Content</th>
                    <th style="width: 20%">Date</th>
                    <th style="width: 15%">Actions</th>
                </thead>
                <tbody>
                    <%= render @announcements %>
                </tbody>
            </table>
            <div class="show_all">
                <%= link_to "New", new_announcement_path, class: "btn btn-default" %>
                <%= link_to "Show all", announcements_path, class: "btn btn-default" %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default admin_panel">
            <div class="panel-heading">
                Quotes 
                <span class="label label-success">IP likes: <%= IpLike.count %></span>
                <span class="label label-success">IP Users: <%= IpUser.count %></span>
            </div>
            <table class="table table-hover">
                <thead>
                    <th style="width: 5%">#</th>
                    <th style="width: 20%">Title</th>
                    <th style="width: 35%">Quote</th>
                    <th style="width: 10%">Stream</th>
                    <th style="width: 5%">Marked</th>
                    <th style="width: 5%">Highlight</th>
                    <th style="width: 10%">f_ip_likes</th>
                    <th style="width: 10%">IP likes</th>
                </thead>
                <tbody>
                    <%= render partial: 'quotes/quote_admin', collection: @quotes, as: 'quote' %>
                </tbody>
            </table>
            <div class="show_all">
                <%= link_to "Show all", admin_quotes_path, class: "btn btn-default" %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <% if @display_social %>
        <% panel_class = "panel-primary"
        panel_button_text = "Hide" %>
    <% else %>
        <% panel_class = "panel-default"
        panel_button_text = "Activate" %>
    <% end %>
    <div class="col-md-6">
        <div class="panel <%= panel_class %>">
            <div class="panel-heading">
                <h3 class="panel-title">Social Settings</h3>
            </div>
            <div class="panel-body">
                <%= link_to panel_button_text, toggle_social_admin_index_path, method: :post,
                    class: "btn btn-default btn-lg btn-block" %>
            </div>
        </div>
    </div>
    <% if @display_ip_voting %>
        <% panel_class = "panel-primary"
        panel_button_text = "Hide" %>
    <% else %>
        <% panel_class = "panel-default"
        panel_button_text = "Activate" %>
    <% end %>
    <div class="col-md-6">
        <div class="panel <%= panel_class %>">
            <div class="panel-heading">
                <h3 class="panel-title">Ip Voting Settings</h3>
            </div>
            <div class="panel-body">
                <%= link_to panel_button_text, toggle_ip_voting_admin_index_path, method: :post, class: "btn btn-default btn-lg btn-block" %>
            </div>
        </div>
    </div>
</div>