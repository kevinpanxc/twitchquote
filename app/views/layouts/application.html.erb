<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TwitchQuotes <%= content_for?(:title) ? "| #{yield(:title)}" : "" %></title>
    <%= favicon_link_tag asset_path("favicon.ico") %>
    <meta name="description" content="The Best Quotes from Twitch Chat!">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <div class="container" id="main">
      <%= render 'layouts/messages' %>
      <%= render 'layouts/facebook_sign_in_modal' %>
      <%= render 'layouts/server_error_modal' %>
      <% if has_announcement? %>
          <%= render 'announcements/announcements', msg: raw(latest_announcement) %>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <%= render 'layouts/google_analytics_script' %>
  </body>
</html>